#include <iostream>
using namespace std;

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  int t;
	cin >> t;
	while(t--)
	{
	    int n;
	    cin >> n;
	    int a[n];
	    for(int i=0;i<n;i++)
	    {
	        cin >> a[i];
	    }
	    int i;
	    for(i=n-1;i>=0;i--)
	    {
	        if(a[i] != 0)
	        {
	            cout << i;
	            break;
	        }
	    }
	    if(i==-1)
	    {
	        cout << 0;
	    }
	    cout << "\n";
	}
	return 0;
}
